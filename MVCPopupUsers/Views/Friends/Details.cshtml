@model MVCPopupUsers.Models.Friend

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">State Detail</h3>
</div>

<div class="modal-body">
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => Model.FirstName, new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control required", @disabled = "disabled" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => Model.MiddleName, new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.MiddleName, new { @class = "form-control required", @disabled = "disabled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => Model.LastName, new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control required", @disabled = "disabled" })
            </div>
        </div>
       
        <div class="form-group">
            @Html.LabelFor(m => m.Gender, new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                <label class="radio-inline">@Html.RadioButtonFor(m => m.Gender, "Male", new { @disabled = "disabled" }) Male</label>
                <label class="radio-inline">@Html.RadioButtonFor(m => m.Gender, "Female", new { @disabled = "disabled" }) Female</label>             
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => Model.MaritalStatus, new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                @Html.DropDownListFor(m => m.MaritalStatus, new SelectList(Enum.GetValues(typeof(MVCPopupUsers.Models.MaritalStatuses))), new { @class = "form-control required", @disabled = "disabled" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Address, new { @class ="control-label col-sm-3" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control required", @disabled ="disabled" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.City, new { @class ="control-label col-sm-3"})
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.City, new { @class = "form-control required", @disabled = "disabled" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.State, new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                @*@Html.TextBoxFor(m => m.State, new { @class = "form-control required", @disabled = "disabled" })*@
                @Html.DropDownListFor(m => m.State, new SelectList(@ViewBag.states, "StateCode", "StateDescription"),
                    "Select a state",
                    new { @class = "form-control", @disabled ="disabled" })
            </div>

        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Zip, new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.Zip, new { @class = "form-control required", @disabled = "disabled" })
            </div>
        </div>
    </div>
</div>

<div class="modal-footer">
    <button class="btn btn-warning" data-dismiss="modal">Close</button>
</div>